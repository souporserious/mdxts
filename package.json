{
  "name": "mdxts",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "format": "prettier --write '**/**/*.{js,ts,tsx,json,css}'",
    "ci:version": "pnpm changeset version && pnpm install --no-frozen-lockfile && git add .",
    "ci:publish": "pnpm build && pnpm publish -r",
    "clean": "pnpm clean:dist && pnpm clean:next && pnpm clean:turbo && pnpm clean:node_modules",
    "clean:dist": "rimraf */**/dist",
    "clean:next": "rimraf */**/.next",
    "clean:turbo": "rimraf */**/.turbo",
    "clean:node_modules": "rimraf */**/node_modules && rimraf node_modules"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@mdx-js/react": "^2.3.0",
    "@swc/core": "^1.3.41",
    "@swc/jest": "^0.2.24",
    "@testing-library/dom": "^9.0.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.3",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/testing-library__jest-dom": "^5.14.5",
    "esbuild": "^0.17.12",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "next": "latest",
    "prettier": "^2.8.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^4.4.0",
    "ts-morph": "^17.0.1",
    "tsup": "6.6.2",
    "turbo": "^1.8.3",
    "typescript": "^5.0.2"
  }
}
