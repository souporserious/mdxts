{
  "name": "mdxts",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "format": "prettier --write '**/**/*.{js,ts,tsx,json,css}'",
    "ci:version": "pnpm changeset version && pnpm install --no-frozen-lockfile && git add .",
    "ci:publish": "pnpm build && pnpm publish -r",
    "clean": "pnpm clean:dist && pnpm clean:next && pnpm clean:turbo && pnpm clean:node_modules",
    "clean:dist": "rimraf */**/dist",
    "clean:next": "rimraf */**/.next",
    "clean:turbo": "rimraf */**/.turbo",
    "clean:node_modules": "rimraf */**/node_modules && rimraf node_modules"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "@mdx-js/react": "^2.3.0",
    "@swc/core": "^1.3.76",
    "@swc/jest": "^0.2.28",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.10",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/testing-library__jest-dom": "^5.14.9",
    "@types/webpack-env": "1.18.1",
    "jest": "^29.6.2",
    "jest-environment-jsdom": "^29.6.2",
    "next": "13.4.19",
    "prettier": "^3.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.1",
    "ts-morph": "^19.0.0",
    "tsup": "6.6.2",
    "turbo": "^1.10.12",
    "typescript": "^5.1.6"
  }
}
