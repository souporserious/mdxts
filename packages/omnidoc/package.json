{
  "name": "omnidoc",
  "version": "3.0.0",
  "description": "The Content & Documentation SDK for React",
  "author": "Travis Arnold",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/souporserious/omnidoc",
    "directory": "packages/omnidoc"
  },
  "bugs": "https://github.com/souporserious/omnidoc/issues",
  "homepage": "https://omnidoc.dev",
  "keywords": [
    "markdown",
    "md",
    "mdx",
    "typescript",
    "ts",
    "tsx",
    "documentation",
    "docgen",
    "react",
    "design systems"
  ],
  "files": [
    "dist/*"
  ],
  "sideEffects": false,
  "bin": {
    "omnidoc": "./dist/cjs/src/cli/index.js"
  },
  "exports": {
    "./assets": {
      "types": "./dist/types/assets/index.d.ts",
      "import": "./dist/esm/assets/index.js",
      "require": "./dist/cjs/src/assets/index.js"
    },
    "./collections": {
      "types": "./dist/types/collections/index.d.ts",
      "import": "./dist/esm/collections/index.js",
      "require": "./dist/cjs/src/collections/index.js"
    },
    "./components": {
      "types": "./dist/types/components/index.d.ts",
      "import": "./dist/esm/components/index.js",
      "require": "./dist/cjs/src/components/index.js"
    },
    "./components/*": {
      "types": "./dist/types/components/*.d.ts",
      "import": "./dist/esm/components/*.js",
      "require": "./dist/cjs/src/components/*.js"
    },
    "./core": {
      "types": "./dist/types/core.d.ts",
      "import": "./dist/esm/core.js",
      "require": "./dist/cjs/src/core.js"
    },
    "./project": {
      "types": "./dist/types/project/index.d.ts",
      "import": "./dist/esm/project/index.js",
      "require": "./dist/cjs/src/project/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "assets": [
        "./dist/types/assets/index.d.ts"
      ],
      "collections": [
        "./dist/types/collections/index.d.ts"
      ],
      "components": [
        "./dist/types/components/index.d.ts"
      ],
      "components/*": [
        "./dist/types/components/*.d.ts"
      ],
      "core": [
        "./dist/types/core.d.ts"
      ],
      "project": [
        "./dist/types/project/index.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "pnpm build:esm && pnpm build:cjs",
    "build:esm": "tsc --outDir dist/esm --declaration true --declarationDir dist/types",
    "build:cjs": "swc src --out-dir dist/cjs --ignore **/*.test.ts --ignore **/*.examples.tsx --config-file .swcrc-cjs",
    "dev": "concurrently \"pnpm build:esm --watch\" \"pnpm build:cjs --watch\"",
    "test": "jest"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@swc/cli": "^0.4.0",
    "@swc/core": "^1.7.21",
    "@types/glob-parent": "5.1.3",
    "@types/mdx": "^2.0.13",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@types/title": "^3.4.3",
    "@types/ws": "^8.5.12",
    "dedent": "^1.5.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "dependencies": {
    "@mdx-js/mdx": "^3.0.1",
    "fast-glob": "^3.3.2",
    "glob-parent": "^6.0.2",
    "restyle": "^2.1.0",
    "server-only": "0.0.1",
    "shiki": "^1.14.1",
    "title": "^3.5.3",
    "ts-morph": "^23.0.0",
    "ws": "^8.18.0"
  }
}
