{
  "name": "mdxts",
  "version": "0.1.5",
  "description": "Markdown by TypeScript",
  "files": [
    "dist/*"
  ],
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js",
    "./components": "./dist/components/index.js",
    "./editor": "./dist/editor/index.js",
    "./next": "./dist/next/index.js",
    "./transform": "./dist/transform/index.js",
    "./utils": "./dist/utils/index.js",
    "./watcher": "./dist/watcher/index.js"
  },
  "types": "./dist/index.d.ts",
  "typesVersions": {
    "*": {
      "components": [
        "./dist/components/index.d.ts"
      ],
      "editor": [
        "./dist/editor/index.d.ts"
      ],
      "next": [
        "./dist/next/index.d.ts"
      ],
      "transform": [
        "./dist/transform/index.d.ts"
      ],
      "utils": [
        "./dist/utils/index.d.ts"
      ],
      "watcher": [
        "./dist/watcher/index.d.ts"
      ]
    }
  },
  "scripts": {
    "build": "tsup index.ts utils/index.ts transform/index.ts rehype/index.ts remark/index.ts watcher/index.ts next/index.ts editor/index.tsx components/index.ts --dts --format esm,cjs",
    "dev": "pnpm build --watch --sourcemap",
    "test": "jest"
  },
  "peerDependencies": {
    "next": ">=13.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "next": "*",
    "react": "*",
    "react-dom": "*",
    "rehype-stringify": "^10.0.0",
    "remark-parse": "^10.0.2",
    "remark-rehype": "^10.1.0",
    "webpack": "^5.88.2"
  },
  "dependencies": {
    "@code-hike/lighter": "0.8.2",
    "@mdx-js/loader": "^2.3.0",
    "@mdx-js/mdx": "^2.3.0",
    "@next/mdx": "13.4.19",
    "@swc/core": "^1.3.82",
    "@types/github-slugger": "^2.0.0",
    "@types/hast": "^3.0.0",
    "@types/mdast": "^4.0.0",
    "case-anything": "^2.1.13",
    "chokidar": "^3.5.3",
    "color": "^4.2.3",
    "copy-webpack-plugin": "^11.0.0",
    "github-slugger": "^2.0.0",
    "hast-util-to-string": "^3.0.0",
    "mdast-util-to-string": "^4.0.0",
    "monaco-editor": "0.41.0",
    "monaco-editor-webpack-plugin": "7.1.0",
    "title": "^3.5.3",
    "ts-morph": "^19.0.0",
    "unified": "^11.0.2",
    "unist-util-visit": "^5.0.0",
    "unist-util-visit-parents": "^6.0.1",
    "vfile": "^6.0.1",
    "vscode-oniguruma": "^2.0.0",
    "vscode-textmate": "^9.0.0",
    "webpack-filter-warnings-plugin": "^1.2.1"
  }
}
